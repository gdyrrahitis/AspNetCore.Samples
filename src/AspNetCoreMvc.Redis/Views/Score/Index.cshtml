@model IEnumerable<AspNetCoreMvc.Redis.ViewModels.HighscoreViewModel>

<div class="row">
    <div class="col-md-12">
        @if (Model != null && Model.Any())
        {
            <ul class="list-group">
                @foreach (var item in Model)
                {
                    <li class="list-group-item" id="@item.Id">
                        <button id="ScoreAdd" type="button" class="btn btn-default btn-sm"><i class="fa fa-plus-circle"></i>&nbsp;Add point</button>
                        <span class="badge">@item.Score</span>
                        @item.FirstName @item.LastName
                    </li>
                }
            </ul>
        }
        else
        {
            <div class="well">
                No users found to update scores...
            </div>
        }
    </div>
</div>

@section scripts {
    <script>
        function increment(data) {
            $("span.badge").text(data.score);
        }

        function fail(error) {
            console.error(error);
        }

        $(document).ready(function() {
            $("#ScoreAdd").on("click", function (evt) {
                evt.preventDefault();

                var id = $(this).parent("li").attr("id");

                $.ajax("/score/index/" + id, {
                    method: "POST",
                    accept: "application/json"
                }).then(increment, fail);
            });
        });
    </script>
}